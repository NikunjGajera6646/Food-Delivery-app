<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs'); %>
        <title>Document</title>
</head>

<body>
    <%- include('./partials/sidebar.ejs'); %>
        <div class='dashboard-app'>
            <div class="container-fluid px-2 px-md-4">

                <div class="card card-body mx-3 mx-md-4 mt-5">

                    <div class="row">
                        <div class="row">
                            <div class="col-12 col-xl-12">
                                <div class="card card-plain h-100">
                                    <form class="container" action="/editprofile/<%= res._id  %> " method="post"
                                        enctype="multipart/form-data">

                                        <div class="card-header pb-0 p-3" style="background-color: blue;">
                                            <h6 class="text-white">Edit Restuarant</h6>
                                        </div>
                                            <div class="m-3 ps-4 text-dark">
                                                <div class="m-3 ps-4 text-dark">

                                                    <div class="form-row d-flex">
                                                    </div>
                                                    <div class="form-row d-flex">
                                                        <div class="form-group col-md-5  ms-4 ">
                                                            <label for="inputState">Area</label>
                                                            <select id="city" class="form-control" name="area">
                                                                <% if(area.length) { %>
                                                                    <% for(let C of area) { %>
                                                                        <option>
                                                                            <%= C.area %>
                                                                        </option>
                                                                        <% } %>
                                                                            <% } %>
                                                            </select>
                                                        </div>
                                                        <div class="form-group col-md-5 ms-4">
                                                            <label for="inputAddress2">New Address: </label>
                                                            <input type="text" class="form-control" id="address"
                                                                placeholder="Enter Address" name="address"
                                                                value="<%= res.address %>">
                                                        </div>

                                                    </div>
                                                    <div class="form-row d-flex">
                                                        <div class="form-group col-md-5 mt-2 ms-4">
                                                            <label for="email" class="">New contactno:</label>
                                                            <input type="text" class="form-control" id="contactno"
                                                                placeholder="Enter contact no" name="contactno"
                                                                value="<%= res.contactno %>">
                                                        </div>
                                                    </div>
                                                    <div class="d-flex mt-4">
                                                        <div class="mb-3 d-flex col-md-3">
                                                            <label class="form-check-label">Type:</label>
                                                            <div class="mb-3 col-md-2 d-flex">

                                                                <div class="form-check ">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="type" id="exampleRadios1" value="Veg">
                                                                    <label class="form-check-label"
                                                                        for="exampleRadios1">
                                                                        Veg
                                                                    </label>
                                                                </div>
                                                                <div class="form-check ">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="type" id="exampleRadios2" value="Non-Veg">
                                                                    <label class="form-check-label"
                                                                        for="exampleRadios2">
                                                                        Non-Veg
                                                                    </label>
                                                                </div>
                                                                <div class="form-check ">
                                                                    <input class="form-check-input" type="radio"
                                                                        name="type" id="exampleRadios2" value="all">
                                                                    <label class="form-check-label"
                                                                        for="exampleRadios2">
                                                                        All
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="mb-3 ms-5 d-flex">
                                                            <div class="mb-3 ms-5 d-flex">
                                                                <label for="email" class="">img:</label>
                                                                <div class="input-group mb-3">
                                                                    <div class="custom-file ms-3">
                                                                        <input type="file"
                                                                            class="custom-file-input btn-secondary"
                                                                            id="img" name="img">
                                                                       

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <button type="submit" class="btn text-white"
                                                        style="width: 100px; background-color: blue;">Submit</button>
                                                </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </main>
            </div>
            </main>

        </div>
</body>

</html>