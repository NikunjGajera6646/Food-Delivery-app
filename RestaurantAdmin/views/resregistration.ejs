<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs'); %>
        <link href="../assets/css/Register.css" rel="stylesheet">


        <title>Login</title>
</head>

<body class="background-radial-gradient" style="background-image: url('https://i.guim.co.uk/img/media/cb7ecc99b0a2e64b18468d655f3226b0cd71be6a/0_283_5843_3505/master/5843.jpg?width=1200&quality=85&auto=format&fit=max&s=aa21b22b2a470e1dadff7aef6b5970eb');">
    <div class="container">
        <div class="body  align-items-center">
            <div class="mt-3">
                <div class="text-center">
                    <h1>Register Restaurant</h1>
                </div>
                <form class="container" action="/RegisterRestaurant" method="post" enctype="multipart/form-data">
                    <div class="m-0 ps-4 text-dark">
                        <div>
                            <div class="mb-3 mt-1 col-8">
                                <label for="resname" class=" pt-2 w-25">Restaurant
                                    Name:</label>
                                <input type="name" class="form-control " id="resname"
                                    placeholder="Enter Restaurant Name" name="resname" required>
                            </div>
                        </div>
                        <div class="form-row d-flex ">
                            <div class="form-group col-md-5">
                                <label for="inputEmail4">Email:</label>
                                <input type="email" class="form-control" id="email" placeholder="Email" name="email" required>
                            </div>
                            <div class="d-flex mt-4 ms-3">
                                <label class="form-check-label">Type:</label>
                                <div class="mb-3 col-md-3 d-flex">

                                    <div class="form-check d-flex">
                                        <input class="form-check-input" type="radio" name="type" id="veg" value="veg" required>
                                        <label class="form-check-label" for="veg">
                                            Veg
                                        </label>
                                    </div>
                                    <div class="form-check d-flex">
                                        <input class="form-check-input" type="radio" name="type" id="non-veg"
                                            value="non-veg" required>
                                        <label class="form-check-label" for="non-veg">
                                            Non-veg
                                        </label>
                                    </div>
                                    <div class="form-check d-flex">
                                        <input class="form-check-input" type="radio" name="type" id="all" value="all" required>
                                        <label class="form-check-label" for="all">
                                            all
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row d-flex">
                            <div class="form-group col-md-5">
                                <label for="inputPassword4">Password:</label>
                                <input type="password" class="form-control" id="password" placeholder="Password"
                                    name="password" required>
                            </div>
                            <div class="form-group col-md-5 ms-4    ">
                                <label for="inputPassword4">Consfirm Password:</label>
                                <input type="password" class="form-control" id="cpassword" placeholder="Consfirm Password"
                                    name="cpassword" required>
                            </div>
                        </div>
                        <div class="form-row d-flex">
                            <div class="form-group col-md-5 mt-2">
                                <label for="inputAddress2">Address: </label>
                                <input type="text" class="form-control" id="address" placeholder="Enter Address"
                                    name="address" required>
                            </div>
                            <div class="form-group col-md-5 mt-2 ms-4">
                                <label for="email" class="">contactno:</label>
                                <input type="text" class="form-control" id="contactno" placeholder="Enter contact no"
                                    name="contactno"required>
                            </div>
                        </div>

                        <div class="d-flex ">
                            <div class="form-group col-md-5">
                                <label for="inputState">State</label>
                                <select id="state" class="form-control" name="state">
                                    <% if(state.length) { %>
                                        <% for(let S of state) { %>
                                            <option>
                                                <%= S.state %>
                                            </option>
                                            <% } %>
                                                <% } %>
                                </select>
                            </div>
                            <div class="form-group col-md-5  ms-4">
                                <label for="inputState">City</label>
                                <select id="city" class="form-control" name="city">
                                    <% if(statecity.length) { %>
                                        <% for(let C of statecity) { %>
                                            <option>
                                                <%= C.city %>
                                            </option>
                                            <% } %>
                                                <% } %>
                                </select>
                            </div>

                        </div>
                        <div class="form-row d-flex">

                            <div class="form-group col-md-5 ">
                                <label for="inputState">Area</label>
                                <select id="city" class="form-control" name="area">
                                    <% if(area.length) { %>
                                        <% for(let C of area) { %>
                                            <option>
                                                <%= C.area %>
                                            </option>
                                            <% } %>
                                                <% } %>
                                </select>
                            </div>
                            <div class="mb-3 ms-5 d-flex mt-4">
                                <label for="email" class="">img:</label>
                                <div class="input-group mb-3">
                                    <div class="custom-file ms-3">
                                        <input type="file" class="custom-file-input btn-secondary" id="img" name="img" required>
                                        <label class="custom-file-label" for="Image"></label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-secondary " style="width: 100px;">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>


</body>

</html>