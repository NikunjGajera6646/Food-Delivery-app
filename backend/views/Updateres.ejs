<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs'); %>
        <title></title>
</head>

<body>
    <%- include('./partials/navbar.ejs'); %>
        <%- include('./partials/sidebar.ejs'); %>
            <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">


                <div class="mt-2">
                    <div class="row m-0">
                        <div class="col-12">
                            <div class="card my-4">
                                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                                    <div class="shadow-primary border-radius-lg pt-4 pb-3"
                                        style="background-color: red;">
                                        <h1 class="text-white text-capitalize ps-3">Update Resturent
                                        </h1>
                                    </div>
                                </div>


                                <form class="container" action="/admin/UpdateRestaurant/<%= res._id  %> " method="post"
                                    enctype="multipart/form-data">
                                    <div class="m-3 ps-4 text-dark">

               
                                        <div class="form-row d-flex">
                                            <div class="form-group col-md-5  ms-4 ">
                                                <label for="inputState">Area</label>
                                                <select id="city" class="form-control" name="area">
                                                    <% if(area.length) { %>
                                                        <% for(let C of area) { %>
                                                            <option>
                                                                <%= C.area %>
                                                            </option>
                                                            <% } %>
                                                                <% } %>
                                                </select>
                                            </div>
                                            <div class="form-group col-md-5 ms-4">
                                                <label for="inputAddress2">New Address: </label>
                                                <input type="text" class="form-control" id="address"
                                                    placeholder="Enter Address" name="address"
                                                    value="<%= res.address %>">
                                            </div>
                                          
                                        </div>
                                        <div class="form-row d-flex">
                                            <div class="form-group col-md-5 mt-2 ms-4">
                                                <label for="email" class="">New contactno:</label>
                                                <input type="text" class="form-control" id="contactno"
                                                    placeholder="Enter contact no" name="contactno"
                                                    value="<%= res.contactno %>">
                                            </div>
                                        </div>

                                        <div class="d-flex mt-4 ms-4 ">
                                            <div class="mb-3 d-flex col-md-3">
                                                <label class="form-check-label">Type:</label>
                                                <div class="mb-3 col-md-5 d-flex">

                                                    <div class="form-check ">
                                                        <input class="form-check-input" type="radio" name="type" id="exampleRadios1" value="Veg" >
                                                        <label class="form-check-label" for="exampleRadios1">
                                                          Veg
                                                        </label>
                                                      </div>
                                                      <div class="form-check ">
                                                        <input class="form-check-input" type="radio" name="type" id="exampleRadios2" value="Non-Veg">
                                                        <label class="form-check-label" for="exampleRadios2">
                                                          Non-Veg
                                                        </label>
                                                      </div>
                                                      <div class="form-check ">
                                                        <input class="form-check-input" type="radio" name="type" id="exampleRadios2" value="all">
                                                        <label class="form-check-label" for="exampleRadios2">
                                                          All
                                                        </label>
                                                      </div>
                                                </div>
                                            </div>
                                            <div class="mb-3 ms-5 d-flex">
                                                <div class="mb-3 ms-5 d-flex">
                                                    <label for="email" class="">img:</label>
                                                    <div class="input-group mb-3">
                                                        <div class="custom-file ms-3">
                                                            <input type="file" class="custom-file-input btn-secondary"
                                                                id="img" name="img">
                                                            <br />
                                                            <!-- <img src="/images/<%= res.img%> ">
                                                            <input type="hidden" name="delateimg"
                                                                value="/images/<%=  res.img %>"
                                                                style="width:300px; height: 300px;"> -->
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn text-white"
                                            style="width: 100px; background-color: red;">Update</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>



            </main>
            </div>
            </main>
</body>
</body>

</html>